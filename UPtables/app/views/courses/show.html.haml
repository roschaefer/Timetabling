%p#notice= notice

%p
  %strong Name
  %br
  = @course.name
%p
  %strong Teacher
  %br
  = @course.teacher.full_name
%p
  %strong Dates
  %br
  = @course.dates
%p
  %strong Mininum Working Days
  %br
  = @course.minimum_working_days
%p
  %strong Participants
  %br
  = @course.participants
- if @course.double_lecture
  %p
    %strong Double Lecture

%br
.container
  %table.table
    %caption Curricula
    %thead
      %tr
        %th Ects Module
        %th Curricula
    %tbody
      - @course.ects_modules.each do |m|
        - m.curricula.each do |c|
          %tr
            %td= m.name
            %td= c.name

%br
.container
  %table.table
    %thead
    %caption Enrollment recommendations per curriculum
    %thead
      %tr
        %th Curriculum
        %th Semester
      - @course.recommendations.each do |r|
        %tr
          %td= r.curriculum.name
          %td= r.semester


= link_to 'Edit', edit_course_path(@course)
\|
= link_to 'Back', courses_path
