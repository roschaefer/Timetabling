= form_for @curriculum do |f|

  %p
    = f.label :name
    %br
    = f.text_field :name

  %p
    = f.label :ects_modules
    %br
    = f.collection_select :ects_module_ids, EctsModule.all, :id, :name, {:selected => @curriculum.ects_modules.collect{|m|m.id}}, {:multiple => true, :class => 'multiselect'}

  - if @curriculum.errors.any?
    #error_explanation
      %h2= "#{pluralize(@curriculum.errors.count, "error")} prohibited this curriculum from being saved:"
      %ul
        - @curriculum.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save'
