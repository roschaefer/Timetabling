= form_for @room do |f|
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :capacity
    %br
    = f.text_field :capacity
  %p
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save'
