  %tbody
    - @rooms.each do |room|
      %tr
        %td= link_to room.name, room
        %td= room.capacity
        %td= link_to 'Edit', edit_room_path(room)
        %td= link_to 'Delete', room, :method => :delete, :data => { :confirm => 'Are you sure?' }

